from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC

def login(driver, username, password):
    driver.get("https://the-internet.herokuapp.com/login")
    driver.find_element(By.ID, "username").send_keys(username)
    driver.find_element(By.ID, "password").send_keys(password)
    driver.find_element(By.CSS_SELECTOR, "button[type='submit']").click()
    
    # ‚è≥ Wait for redirect to secure area
    WebDriverWait(driver, 10).until(
        EC.url_contains("/secure")
    )

def navigate_to_form(driver):
    driver.find_element(By.LINK_TEXT, "Dropdown").click()

def fill_form(driver):
    dropdown = WebDriverWait(driver, 10).until(
        EC.presence_of_element_located((By.ID, "dropdown"))
    )
    dropdown.click()
    driver.find_element(By.CSS_SELECTOR, "#dropdown option[value='2']").click()

def logout(driver):
    driver.find_element(By.LINK_TEXT, "Logout").click()

def test_full_flow(driver):
    login(driver, "tomsmith", "SuperSecretPassword!")
    assert "secure" in driver.current_url

    navigate_to_form(driver)
    fill_form(driver)

    driver.save_screenshot("screenshots/form_submitted.png")

    driver.back()
    logout(driver)
    assert "login" in driver.current_url
