from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC

def test_dropdown_page(driver):
    # Step 1: Go directly to the dropdown page
    driver.get("https://the-internet.herokuapp.com/dropdown")

    # Step 2: Wait for dropdown to appear
    dropdown = WebDriverWait(driver, 60).until(
        EC.presence_of_element_located((By.ID, "dropdown"))
    )

    # Step 3: Click dropdown and select an option
    dropdown.click()
    driver.find_element(By.CSS_SELECTOR, "#dropdown option[value='2']").click()

    # Optional: Screenshot
    driver.save_screenshot("screenshots/dropdown_selected.png")
